doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/urlItem.css')
  body
    form(method='post', action=('/admin/module/urlListTransfer'))
      div.content
        div.title
          span.title-name 名称：
          input.title-input(value=urlItem.title, name='title')
        div.url
          span.url-name url:
          input.url-input(value=urlItem.url, name='url')
        div.server
          span.server-name 接入的url：
          input.server-input(value=urlItem.serverUrl, name='serverUrl')

        div.header-field
          p.header-name header
          p.header-change 字段更改
          div.header-change-content
            each item in urlItem.header
              div.header-field-list
                each value, key in item
                  span.header-old-field 原字段:
                  input.header-old-field-input(value=key, name='headerOldFieldInput')
                  span.header-new-field 新字段:
                  input.header-new-field-input(value=value, name='headerNewFieldInput')
          div.header-add-field(onclick='addHeaderChange()') +

        p.header-field-add-title 字段添加
        div.header-field-add
          div.header-field-add-content
            each item in urlItem.headerAdd
              div.header-field-add-list
                each value, key in item
                  span.header-field-add-name-key key:
                  input.header-field-add-input(value=key, name='headerFieldAddKey')
                  span.header-field-add-name-value value:
                  input.header-field-add-input(value=value, name='headerFieldAddValue')

          div.header-add-field(onclick='addHeaderField()') +

        div.body-field
          p.body-name body
          p.body-change 字段更改
          div.body-change-content
            each item in urlItem.body
              div.body-field-list
                each value, key in item
                  span.body-old-field 原字段:
                  input.body-old-field-input(value=key, name='bodyOldFieldInput')
                  span.body-new-field 新字段:
                  input.body-new-field-input(value=value, name='bodyNewFieldInput')
          div.body-add-field(onclick='addBodyChange()') +

        p.body-field-add-title 字段添加
        div.body-field-add
          div.body-field-add-content
            each item in urlItem.bodyAdd
              div.body-field-add-list
                each value, key in item
                  span.body-field-add-name-key key:
                  input.body-field-add-input(value=key, name='bodyFieldAddKey')
                  span.body-field-add-name-value value:
                  input.body-field-add-input(value=value, name='bodyFieldAddValue')
          div.body-add-field(onclick='addBodyField()') +


      input(type='submit', value='提交')
    script(src='/lib/jquery.min.js')
    script(src='/javascripts/urlItem.js')